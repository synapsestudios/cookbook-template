#! /bin/sh
### BEGIN INIT INFO
# Provides:     iodocs-server
# Default-Start:    2 3 4 5
# Default-Stop:     0 1 6
### END INIT INFO


PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
DAEMON=/usr/bin/node
DAEMON_ARGS=/home/<%= node['server']['user'] %>/iodocs/app.js
NAME=iodocs-server
DESC=iodocs-server

RUNDIR=/var/run/iodocs
PIDFILE=$RUNDIR/iodocs-server.pid

set -e

case "$1" in
  start)
    echo -n "Starting $DESC: "
    mkdir -p $RUNDIR
    touch $PIDFILE
    chown root:root $RUNDIR $PIDFILE
    chmod 755 $RUNDIR
    if start-stop-daemon --background --make-pidfile --start --quiet --umask 007 --pidfile $PIDFILE --chuid root:root --exec $DAEMON -- $DAEMON_ARGS
    then
        echo "$NAME."
    else
        echo "failed"
        exit 2
    fi
    ;;
  stop)
    echo -n "Stopping $DESC: "
    if start-stop-daemon --stop --retry forever/QUIT/1 --quiet --oknodo --pidfile $PIDFILE --exec $DAEMON
    then
        echo "$NAME."
    else
        echo "failed"
        exit 3
    fi
    rm -f $PIDFILE
    ;;

  restart|force-reload)
    ${0} stop
    ${0} start
    ;;

  status)
    echo -n "$DESC is "
    if start-stop-daemon --stop --quiet --signal 0 --name ${NAME} --pidfile ${PIDFILE}
    then
        echo "running"
    else
        echo "not running"
        exit 4
    fi
    ;;

  *)
    echo "Usage: /etc/init.d/$NAME {start|stop|restart|force-reload}" >&2
    exit 5
    ;;
esac

exit 0